name: Find JIRA task IDs from PR title

on:
  pull_request:
    branches:
      - main
    types:
      - opened
      - edited
      - synchronize

jobs:
  find-jira-keys:
    runs-on: ubuntu-latest

    steps:
      - name: Find JIRA task IDs from PR title
        run: |
          temp=$(echo "${{ github.event.pull_request.title }}" | grep -o '\[[^]]*\]' | sed 's/\[//;s/\]//' | tr -d ' ')
          IFS=$',' read -ra keys <<< "$temp"
          for key in "${keys[@]}"; do
            echo "Key: $key"
          done
